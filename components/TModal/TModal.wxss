/* components/base/TModal/TModal.wxss */
.t-modal {
  display: block;
  position: fixed;
  z-index: 2;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  border-radius: 30rpx 30rpx 0 0;
  overflow: hidden;
}

.t-model_inside {
  width: 100%;
  height: 100%;
  border-radius:unset;
}

.t-modal-body {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
}

.t-modal-mask {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(50, 50, 50, 0.4);
}