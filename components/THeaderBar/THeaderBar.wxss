/* components/base/THeaderBar/THeaderBar.wxss */
.bar {
  position: relative;
  width: 100vw;
  font-size: 28rpx;
  background-color: transparent;
  transition: color 0.5s ease-in-out;
}

.status-bar {
  overflow: hidden;
}

.bar-body {
  display: grid;
  align-items: center;
  position: relative;
  z-index: 2;
}

.bar-background {
  position: absolute;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.bar-placeholder {
  width: 100vw;
}